def get_delay_from_freq_response(W, H):
    new_freq = (W[1:] + W[:1])/2
    angles = angle_to_winding_number(np.angle(H))
    group_delay =  -np.diff(angles)/np.diff(W)
    return (new_freq, group_delay)

